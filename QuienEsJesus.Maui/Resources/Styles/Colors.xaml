    <Color x:Key="PrimaryDark">#5a0e09</Color>
    <Color x:Key="PrimaryDarkText">#fbf0d8</Color>
    <Color x:Key="Secondary">#b02a29</Color>
    <Color x:Key="SecondaryDark">#8e2222</Color>
    <Color x:Key="SecondaryDarkText">#fbf0d8</Color>

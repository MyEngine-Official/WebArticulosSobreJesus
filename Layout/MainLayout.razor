@inherits LayoutComponentBase
<div class="main-layout">
    <nav class="navbar navbar-expand-lg navbar-elegant">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">
                <span class="brand-text">¿Quién es Jesús?</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/articulos">Artículos</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="main-content">
        @Body
    </main>

    <footer class="footer-elegant">
        <div class="container">
            <div class="row">
                <div class="col-md-6 mb-4 mb-md-0">
                    <h5 class="footer-title">¿Quién es Jesús?</h5>
                    <p class="footer-text">Explorando la identidad, enseñanzas y legado de Jesús a través de las Escrituras y la historia.</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="footer-text mb-2">
                        <i class="bi bi-book"></i> Estudio basado en fuentes históricas y bíblicas
                    </p>
                    <p class="footer-copyright">
                        © @DateTime.Now.Year - Todos los derechos reservados
                    </p>
                </div>
            </div>
        </div>
    </footer>
</div>

<style>
    /* Layout Principal */
    .main-layout {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .main-content {
        flex: 1;
    }

    /* Navbar Elegante - Tonos Clásicos */
    .navbar-elegant {
        background: white;
        box-shadow: var(--shadow-md);
        padding: 1rem 0;
        position: sticky;
        top: 0;
        z-index: 1000;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.98);
        border-bottom: 1px solid var(--color-gray-light);
    }

    .navbar-brand {
        font-weight: 800;
        font-size: 1.5rem;
        background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-secondary) 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        transition: all var(--transition-fast);
    }

    .navbar-brand:hover {
        transform: scale(1.05);
    }

    .brand-text {
        position: relative;
    }

    .brand-text::after {
        content: '';
        position: absolute;
        width: 0;
        height: 3px;
        bottom: -5px;
        left: 0;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        transition: width var(--transition-normal);
    }

    .navbar-brand:hover .brand-text::after {
        width: 100%;
    }

    .nav-link {
        color: var(--color-dark) !important;
        font-weight: 600;
        padding: 0.75rem 1.5rem !important;
        position: relative;
        transition: color var(--transition-fast);
    }

    .nav-link::before {
        content: '';
        position: absolute;
        width: 0;
        height: 3px;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        transition: width var(--transition-normal);
    }

    .nav-link:hover {
        color: var(--color-primary) !important;
    }

    .nav-link:hover::before {
        width: 80%;
    }

    .navbar-toggler {
        border: 2px solid var(--color-primary);
        padding: 0.5rem 0.75rem;
    }

    .navbar-toggler:focus {
        box-shadow: 0 0 0 0.25rem rgba(176, 42, 41, 0.25);
    }

    .navbar-toggler-icon {
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3e%3cpath stroke='%23b02a29' stroke-linecap='round' stroke-miterlimit='10' stroke-width='2' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e");
    }

    /* Footer Elegante - Tonos Clásicos */
    .footer-elegant {
        background: linear-gradient(135deg, var(--color-dark) 0%, var(--color-secondary) 100%);
        color: var(--color-cream);
        padding: 3rem 0 1.5rem;
        margin-top: 4rem;
        position: relative;
    }

    .footer-elegant::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary), var(--color-secondary-light));
    }

    .footer-title {
        font-weight: 800;
        margin-bottom: 1rem;
        color: var(--color-cream);
    }

    .footer-text {
        color: rgba(251, 240, 216, 0.85);
        line-height: 1.6;
        margin-bottom: 0.5rem;
    }

    .footer-text i {
        color: var(--color-primary-light);
        margin-right: 0.5rem;
    }

    .footer-copyright {
        color: rgba(251, 240, 216, 0.6);
        font-size: 0.9rem;
        margin-top: 1rem;
        margin-bottom: 0;
    }

    /* Responsive */
    @@media (max-width: 991px) {
        .navbar-nav {
            padding-top: 1rem;
        }

        .nav-link {
            padding: 0.75rem 0 !important;
        }

        .nav-link::before {
            left: 0;
            transform: none;
        }

        .nav-link:hover::before {
            width: 100%;
        }
    }
</style>

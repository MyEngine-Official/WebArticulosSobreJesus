@inject IJSRuntime JSRuntime

<button class="theme-toggle-btn" @onclick="ToggleTheme" title="@(isDarkMode ? "Cambiar a modo claro" : "Cambiar a modo oscuro")">
    @if (isDarkMode)
    {
        <i class="bi bi-sun-fill"></i>
    }
    else
    {
        <i class="bi bi-moon-fill"></i>
    }
</button>

<style>
    .theme-toggle-btn {
        width: 42px;
        height: 42px;
        border-radius: 50%;
        border: 2px solid var(--color-gray-light);
        background: var(--color-white);
        color: var(--color-primary);
        font-size: 1.1rem;
        cursor: pointer;
        transition: all var(--transition-fast);
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .theme-toggle-btn:hover {
        background: var(--color-primary);
        color: var(--color-white);
        border-color: var(--color-primary);
        transform: rotate(20deg);
    }

    :root[data-theme="dark"] .theme-toggle-btn {
        background: var(--color-dark);
        border-color: var(--color-secondary);
        color: var(--color-cream);
    }

    :root[data-theme="dark"] .theme-toggle-btn:hover {
        background: var(--color-secondary);
        border-color: var(--color-secondary);
    }
</style>

@code {
    private bool isDarkMode = false;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var savedTheme = await JSRuntime.InvokeAsync<string>("localStorageHelper.getItem", "theme");
                isDarkMode = savedTheme == "dark";
                
                if (isDarkMode)
                {
                    await ApplyTheme("dark");
                }
                
                StateHasChanged();
            }
            catch
            {
                // Ignore errors if localStorage is not available
            }
        }
    }

    private async Task ToggleTheme()
    {
        isDarkMode = !isDarkMode;
        var theme = isDarkMode ? "dark" : "light";
        
        await ApplyTheme(theme);
        
        try
        {
            await JSRuntime.InvokeVoidAsync("localStorageHelper.setItem", "theme", theme);
        }
        catch
        {
            // Ignore errors if localStorage is not available
        }
    }

    private async Task ApplyTheme(string theme)
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("eval", $"document.documentElement.setAttribute('data-theme', '{theme}')");
        }
        catch
        {
            // Ignore errors
        }
    }
}

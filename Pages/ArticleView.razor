@page "/articulos/{Id}"
@using QuienEsJesus.Models
@using QuienEsJesus.Services
@using QuienEsJesus.Helpers
@using Markdig
@inject ArticleService ArticleService
@inject NavigationManager Navigation

<PageTitle>@(article?.Titulo ?? "Artículo") - ¿Quién es Jesús?</PageTitle>

@if (article == null)
{
    <div class="container mt-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Artículo no encontrado.
        </div>
        <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/articulos"))">
            <i class="bi bi-arrow-left"></i> Volver a Artículos
        </button>
    </div>
}
else
{
    <div class="container mt-4 fade-in">
        @if (viewHelper.ShowDebugControls() && viewHelper.CanEditArticles())
        {
            <div class="d-flex justify-content-end mb-3">
                <button class="btn btn-sm @(viewHelper.ProductionMode ? "btn-outline-primary" : "btn-warning")" 
                        @onclick="ToggleProductionMode">
                    <i class="bi bi-@(viewHelper.ProductionMode ? "code-slash" : "eye")"></i> 
                    @(viewHelper.ProductionMode ? "Modo Debug" : "Modo Producción")
                </button>
            </div>
        }

        @if (!article.EsPublico && viewHelper.CanEditArticles())
        {
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-eye-slash"></i> <strong>Artículo Privado:</strong> Este artículo no es visible en modo producción.
            </div>
        }

        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/articulos">Artículos</a></li>
                <li class="breadcrumb-item active" aria-current="page">@article.Titulo</li>
            </ol>
        </nav>

        <article class="article-content">
            <header class="mb-4">
                <div class="d-flex justify-content-between align-items-start">
                    <h1 class="display-4 mb-3">@article.Titulo</h1>
                    @if (!article.EsPublico && viewHelper.CanEditArticles())
                    {
                        <span class="badge badge-warning" style="height: fit-content;">
                            <i class="bi bi-eye-slash"></i> Privado
                        </span>
                    }
                </div>
                <p class="lead text-muted mb-3">@article.Descripcion</p>
                <div class="text-muted small">
                    <i class="bi bi-calendar3"></i> Publicado el @article.FechaPublicacion.ToString("dd 'de' MMMM 'de' yyyy")
                </div>
                <hr class="my-4 article-divider">
            </header>

            <section class="article-body mb-5">
                @((MarkupString)ConvertMarkdownToHtml(article.Contenido))
            </section>

            @if (!string.IsNullOrWhiteSpace(article.PieDePagina))
            {
                <footer class="article-footer mt-5 pt-4 border-top">
                    <div class="text-muted">
                        @((MarkupString)ConvertMarkdownToHtml(article.PieDePagina))
                    </div>
                </footer>
            }
        </article>

        <div class="mt-5 mb-5">
            <button class="btn btn-outline-primary" @onclick="@(() => Navigation.NavigateTo("/articulos"))">
                <i class="bi bi-arrow-left"></i> Volver a Artículos
            </button>
            @if (viewHelper.CanEditArticles())
            {
                <button class="btn btn-outline-secondary ms-2" 
                        @onclick="@(() => Navigation.NavigateTo($"/articulos/editar/{article.Id}"))">
                    <i class="bi bi-pencil"></i> Editar
                </button>
            }
        </div>
    </div>
}

<style>
    .article-content {
        max-width: 900px;
        margin: 0 auto;
    }

    .article-divider {
        border: none;
        height: 2px;
        background: linear-gradient(90deg, var(--color-primary), transparent);
    }

    .article-body {
        font-size: 1.125rem;
        line-height: 1.9;
        color: var(--color-dark);
    }

    .article-body h2 {
        margin-top: 2.5rem;
        margin-bottom: 1.25rem;
        font-weight: 700;
        position: relative;
        padding-bottom: 0.5rem;
        color: var(--color-primary);
    }

    .article-body h2::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 3px;
        background: linear-gradient(90deg, var(--color-primary), var(--color-secondary));
        border-radius: 2px;
    }

    .article-body h3 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 600;
        color: var(--color-secondary);
    }

    .article-body p {
        margin-bottom: 1.5rem;
        text-align: justify;
    }

    .article-body blockquote {
        border-left: 4px solid var(--color-primary);
        padding-left: 2rem;
        margin: 2rem 0;
        font-style: italic;
        color: var(--color-gray);
        background: var(--color-cream);
        padding: 1.5rem 2rem;
        border-radius: var(--radius-md);
    }

    .article-body code {
        background: var(--color-cream);
        color: var(--color-primary-dark);
        padding: 0.25rem 0.5rem;
        border-radius: var(--radius-sm);
        font-size: 0.9em;
        font-family: 'Fira Code', 'Courier New', monospace;
    }

    .article-body pre {
        background: var(--color-dark);
        color: var(--color-cream);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        overflow-x: auto;
        box-shadow: var(--shadow-md);
    }

    .article-body pre code {
        background: transparent;
        color: inherit;
        padding: 0;
    }

    .article-body ul, .article-body ol {
        margin-bottom: 1.5rem;
        padding-left: 2rem;
    }

    .article-body li {
        margin-bottom: 0.75rem;
    }

    .article-body a {
        color: var(--color-primary);
        font-weight: 600;
        text-decoration: underline;
        text-decoration-color: rgba(176, 42, 41, 0.3);
        text-underline-offset: 3px;
    }

    .article-body a:hover {
        text-decoration-color: var(--color-primary);
    }

    .article-footer {
        font-size: 0.95rem;
        background: var(--color-cream);
        padding: 1.5rem;
        border-radius: var(--radius-md);
        border-top: 2px solid var(--color-primary) !important;
    }

    .lead {
        font-size: 1.25rem;
        font-weight: 400;
        line-height: 1.6;
    }
</style>

@code {
    [Parameter]
    public string? Id { get; set; }

    private Article? article;
    private ArticleViewHelper viewHelper = new();

    protected override async Task OnInitializedAsync()
    {
        await ArticleService.InitializeAsync();
        
        if (!string.IsNullOrEmpty(Id))
        {
            article = ArticleService.GetArticleById(Id);
            
            // Validar visibilidad
            if (article != null && !viewHelper.ShouldShowArticle(article))
            {
                Navigation.NavigateTo("/articulos");
            }
        }
    }

    private string ConvertMarkdownToHtml(string markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown))
            return string.Empty;

        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .Build();

        return Markdown.ToHtml(markdown, pipeline);
    }

    private void ToggleProductionMode()
    {
        viewHelper.ToggleProductionMode();
        StateHasChanged();
    }
}

@page "/articulos"
@using QuienEsJesus.Models
@using QuienEsJesus.Services
@using QuienEsJesus.Helpers
@inject ArticleService ArticleService
@inject NavigationManager Navigation

<PageTitle>Artículos - ¿Quién es Jesús?</PageTitle>

<div class="container mt-4 fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Explorando la Identidad de Jesús</h1>
        <div class="d-flex gap-2">
            @if (viewHelper.ShowDebugControls())
            {
                <button class="btn @(viewHelper.ProductionMode ? "btn-outline-primary" : "btn-warning")" 
                        @onclick="ToggleProductionMode">
                    <i class="bi bi-@(viewHelper.ProductionMode ? "code-slash" : "eye")"></i>
                    @(viewHelper.ProductionMode ? "Modo Debug" : "Modo Producción")
                </button>
                @if (viewHelper.CanEditArticles())
                {
                    <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/articulos/crear"))">
                        <i class="bi bi-plus-circle"></i> Nuevo Artículo
                    </button>
                }
            }
        </div>
    </div>

    @if (viewHelper.ShowDebugControls() && viewHelper.CanEditArticles())
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> <strong>Modo Debug:</strong> Estás viendo todos los artículos (públicos y privados).
            Usa el botón "Modo Producción" para ver cómo se vería en release.
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!filteredArticles.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No hay artículos publicados aún.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var article in filteredArticles)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card h-100 shadow-elegant hover-card @(article.EsPublico ? "" : "border-gradient")">
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="card-title">@article.Titulo</h5>
                                @if (!article.EsPublico && viewHelper.CanEditArticles())
                                {
                                    <span class="badge badge-warning">
                                        <i class="bi bi-eye-slash"></i> Privado
                                    </span>
                                }
                            </div>
                            <p class="card-text text-muted small mb-2">
                                <i class="bi bi-calendar3"></i> @article.FechaPublicacion.ToString("dd/MM/yyyy")
                            </p>
                            <p class="card-text flex-grow-1">@article.Descripcion</p>
                            <div class="mt-auto">
                                <button class="btn btn-outline-primary w-100" 
                                        @onclick="@(() => Navigation.NavigateTo($"/articulos/{article.Id}"))">
                                    Leer más <i class="bi bi-arrow-right"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Article> articles = new();
    private List<Article> filteredArticles = new();
    private ArticleViewHelper viewHelper = new();

    protected override async Task OnInitializedAsync()
    {
        await ArticleService.InitializeAsync();
        articles = ArticleService.GetAllArticles();
        FilterArticles();
    }

    private void FilterArticles()
    {
        filteredArticles = articles.Where(a => viewHelper.ShouldShowArticle(a)).ToList();
    }

    private void ToggleProductionMode()
    {
        viewHelper.ToggleProductionMode();
        FilterArticles();
        StateHasChanged();
    }
}

@page "/articulos/crear"
@page "/articulos/editar/{Id}"
@using QuienEsJesus.Models
@using QuienEsJesus.Services
@using QuienEsJesus.Helpers
@using Markdig
@using Microsoft.JSInterop
@inject ArticleService ArticleService
@inject BibleService BibleService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

@if (!BuildConfiguration.IsDebugMode)
{
    <PageTitle>No Disponible - ¿Quién es Jesús?</PageTitle>
    <div class="container mt-4">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-triangle"></i> Esta función solo está disponible en modo desarrollo.
        </div>
        <button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo("/articulos"))">
            <i class="bi bi-arrow-left"></i> Volver a Artículos
        </button>
    </div>
}
else
{
    <PageTitle>@(IsEditing ? "Editar" : "Crear") Artículo - ¿Quién es Jesús?</PageTitle>

    <div class="container mt-4 fade-in">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>@(IsEditing ? "Editar" : "Crear") Artículo</h1>
            <span class="badge badge-primary">
                <i class="bi bi-code-slash"></i> Modo Debug
            </span>
        </div>

        <EditForm Model="article" OnValidSubmit="HandleSubmit">
            <DataAnnotationsValidator />

            <div class="row">
                <div class="col-lg-6">
                    <div class="card mb-4 shadow-elegant">
                        <div class="card-header">
                            <h5 class="mb-0">Información del Artículo</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <label for="titulo" class="form-label">Título *</label>
                                <InputText id="titulo" class="form-control" @bind-Value="article.Titulo" 
                                           placeholder="Título del artículo" />
                            </div>

                            <div class="mb-3">
                                <label for="descripcion" class="form-label">Descripción *</label>
                                <InputTextArea id="descripcion" class="form-control" rows="3" 
                                               @bind-Value="article.Descripcion" 
                                               placeholder="Breve descripción del artículo" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Estado de Publicación</label>
                                <div class="form-check form-switch">
                                    <InputCheckbox class="form-check-input" id="esPublico" 
                                                   @bind-Value="article.EsPublico" />
                                    <label class="form-check-label" for="esPublico">
                                        @if (article.EsPublico)
                                        {
                                            <i class="bi bi-eye"></i>
                                            <strong>Público</strong>

                                            <text> - Visible en producción </text>
                                        }
                                        else
                                        {
                                            <i class="bi bi-eye-slash"></i>
                                            <strong>Privado</strong>

                                            <text> - Solo visible en debug</text>
                                        }
                                    </label>
                                </div>
                                @if (!article.EsPublico)
                                {
                                    <small class="text-muted">
                                        Este artículo no será visible cuando la aplicación esté en release.
                                    </small>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="card mb-4 shadow-elegant">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">Vista Previa</h5>
                            <button type="button" class="btn btn-sm btn-outline-secondary" @onclick="TogglePreview">
                                <i class="bi bi-eye@(showPreview ? "-slash" : "")"></i>
                            </button>
                        </div>
                        @if (showPreview)
                        {
                            <div class="card-body preview-content">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h4 class="text-gradient">@article.Titulo</h4>
                                    @if (!article.EsPublico)
                                    {
                                        <span class="badge badge-warning">
                                            <i class="bi bi-eye-slash"></i> Privado
                                        </span>
                                    }
                                </div>
                                <p class="text-muted">@article.Descripcion</p>
                                <hr />
                                <div>@((MarkupString)ConvertMarkdownToHtml(article.Contenido))</div>
                                @if (!string.IsNullOrWhiteSpace(article.PieDePagina))
                                {
                                    <hr class="mt-4" />
                                    <div class="text-muted small">
                                        @((MarkupString)ConvertMarkdownToHtml(article.PieDePagina))
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="card mb-4 shadow-elegant">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Contenido (Markdown)</h5>
                    <div class="btn-group btn-group-sm" role="group">
                        <button type="button" class="btn btn-outline-primary" @onclick="OpenBibleSearch" title="Buscar en la Biblia">
                            <i class="bi bi-journal-bookmark"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("**", "**"))" title="Negrita">
                            <strong>B</strong>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("*", "*"))" title="Cursiva">
                            <em>I</em>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("## ", ""))" title="Encabezado">
                            H2
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("> ", ""))" title="Cita">
                            <i class="bi bi-quote"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("- ", ""))" title="Lista">
                            <i class="bi bi-list-ul"></i>
                        </button>
                        <button type="button" class="btn btn-outline-secondary" @onclick="@(() => InsertMarkdown("[texto](", ")"))" title="Enlace">
                            <i class="bi bi-link-45deg"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <InputTextArea @ref="contentTextArea" class="form-control font-monospace" rows="15" 
                                   @bind-Value="article.Contenido" 
                                   placeholder="Escribe el contenido del artículo en Markdown..." />
                    <small class="text-muted mt-2 d-block">
                        Usa Markdown para dar formato al texto. 
                        <a href="https://www.markdownguide.org/basic-syntax/" target="_blank">Guía de Markdown</a>
                    </small>
                </div>
            </div>

            <div class="card mb-4 shadow-elegant">
                <div class="card-header">
                    <h5 class="mb-0">Pie de Página (Opcional)</h5>
                </div>
                <div class="card-body">
                    <InputTextArea class="form-control font-monospace" rows="4" 
                                   @bind-Value="article.PieDePagina" 
                                   placeholder="Información adicional, referencias, notas al pie..." />
                </div>
            </div>

            <div class="d-flex gap-2 mb-5">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> @(IsEditing ? "Actualizar" : "Publicar") Artículo
                </button>
                <button type="button" class="btn btn-outline-secondary" @onclick="Cancel">
                    <i class="bi bi-x-circle"></i> Cancelar
                </button>
                @if (IsEditing)
                {
                    <button type="button" class="btn btn-outline-danger ms-auto" @onclick="DeleteArticle">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                }
            </div>
        </EditForm>
    </div>

    @* Bible Search Modal *@
    @if (showBibleModal)
    {
        <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="bi bi-journal-bookmark"></i> Buscar en la Biblia
                        </h5>
                        <button type="button" class="btn-close" @onclick="CloseBibleSearch"></button>
                    </div>
                    <div class="modal-body">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" 
                                   @bind="bibleSearchQuery" 
                                   @bind:event="oninput"
                                   @onkeypress="HandleBibleKeyPress"
                                   placeholder="Buscar palabra, frase, referencia..." />
                            <button class="btn btn-primary" type="button" @onclick="SearchBible" disabled="@isBibleSearching">
                                @if (isBibleSearching)
                                {
                                    <span class="spinner-border spinner-border-sm"></span>
                                }
                                else
                                {
                                    <i class="bi bi-search"></i>
                                }
                            </button>
                        </div>
                        <small class="text-muted d-block mb-3">
                            La búsqueda ignora mayúsculas/minúsculas y acentos. Ej: "amor", "Juan 3:16", "Genesis"
                        </small>

                        @if (bibleSearchResults.Any())
                        {
                            <div class="list-group bible-modal-results">
                                @foreach (var result in bibleSearchResults)
                                {
                                    <button type="button" class="list-group-item list-group-item-action" 
                                            @onclick="() => SelectVerse(result)">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1 text-primary">@result.Reference</h6>
                                                <p class="mb-0 small">@result.Text</p>
                                            </div>
                                            <i class="bi bi-plus-circle text-success"></i>
                                        </div>
                                    </button>
                                }
                            </div>
                        }
                        else if (hasBibleSearched)
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-search" style="font-size: 2rem;"></i>
                                <p class="mt-2">No se encontraron versículos</p>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-4">
                                <i class="bi bi-journal-bookmark" style="font-size: 2rem;"></i>
                                <p class="mt-2">Busca un versículo para insertarlo como cita</p>
                            </div>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" @onclick="CloseBibleSearch">
                            Cerrar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    }

    <style>
        .preview-content {
            max-height: 600px;
            overflow-y: auto;
        }

        .preview-content h2, .preview-content h3 {
            margin-top: 1.5rem;
            color: var(--color-primary);
        }

        .preview-content blockquote {
            border-left: 4px solid var(--color-primary);
            padding-left: 1.5rem;
            margin: 1.5rem 0;
            color: var(--color-gray);
            background: var(--color-cream);
            padding: 1rem 1.5rem;
            border-radius: var(--radius-sm);
        }

        .preview-content ul, .preview-content ol {
            padding-left: 2rem;
        }

        .form-control.font-monospace {
            font-family: 'Fira Code', 'Courier New', monospace;
            font-size: 0.95rem;
        }

        .bible-modal-results {
            max-height: 400px;
            overflow-y: auto;
        }
    </style>
}

@code {
    [Parameter]
    public string? Id { get; set; }

    private Article article = new();
    private bool IsEditing => !string.IsNullOrEmpty(Id);
    private bool showPreview = true;
    private InputTextArea? contentTextArea;

    // Bible search state
    private bool showBibleModal = false;
    private string bibleSearchQuery = string.Empty;
    private List<BibleSearchResult> bibleSearchResults = new();
    private bool isBibleSearching = false;
    private bool hasBibleSearched = false;

    protected override async Task OnInitializedAsync()
    {
        // Redirigir si no está en modo debug
        if (!BuildConfiguration.IsDebugMode)
        {
            Navigation.NavigateTo("/articulos");
            return;
        }

        await ArticleService.InitializeAsync();
        await BibleService.InitializeAsync();
        
        if (IsEditing)
        {
            var existingArticle = ArticleService.GetArticleById(Id!);
            if (existingArticle != null)
            {
                article = existingArticle;
            }
            else
            {
                Navigation.NavigateTo("/articulos");
            }
        }
    }

    private async Task HandleSubmit()
    {
        if (IsEditing)
        {
            await ArticleService.UpdateArticleAsync(article);
        }
        else
        {
            await ArticleService.AddArticleAsync(article);
        }
        Navigation.NavigateTo("/articulos");
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/articulos");
    }

    private async Task DeleteArticle()
    {
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            "¿Estás seguro de que deseas eliminar este artículo?");
        if (confirmed)
        {
            await ArticleService.DeleteArticleAsync(article.Id);
            Navigation.NavigateTo("/articulos");
        }
    }

    private void TogglePreview()
    {
        showPreview = !showPreview;
    }

    private void InsertMarkdown(string before, string after)
    {
        article.Contenido += before + "texto" + after;
    }

    private string ConvertMarkdownToHtml(string markdown)
    {
        if (string.IsNullOrWhiteSpace(markdown))
            return string.Empty;

        var pipeline = new MarkdownPipelineBuilder()
            .UseAdvancedExtensions()
            .Build();

        return Markdown.ToHtml(markdown, pipeline);
    }

    // Bible search methods
    private void OpenBibleSearch()
    {
        showBibleModal = true;
        bibleSearchQuery = string.Empty;
        bibleSearchResults.Clear();
        hasBibleSearched = false;
    }

    private void CloseBibleSearch()
    {
        showBibleModal = false;
    }

    private async Task HandleBibleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter")
        {
            await SearchBible();
        }
    }

    private async Task SearchBible()
    {
        if (string.IsNullOrWhiteSpace(bibleSearchQuery)) return;

        isBibleSearching = true;
        StateHasChanged();

        await Task.Delay(50); // Small delay for UI feedback

        bibleSearchResults = BibleService.SearchByText(bibleSearchQuery, 50);
        hasBibleSearched = true;
        isBibleSearching = false;
    }

    private void SelectVerse(BibleSearchResult result)
    {
        // Insert as a blockquote with reference
        var citation = $"\n\n> \"{result.Text}\"\n> — *{result.Reference} (LBLA)*\n\n";
        article.Contenido += citation;
        showBibleModal = false;
    }
}
